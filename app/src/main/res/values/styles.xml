<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/toolbarTitleColor</item>
        <item name="android:textSize">@dimen/toolbar_title_dimension</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BUTTON styles -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <!-- Add /update location styles -->
    <style name="AddLocationLinearLayoutContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="AddLocationTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddLocationEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AddLocationEditTextStyleInputText" parent = "AddLocationEditTextStyle">
        <item name="android:inputType">text</item>
    </style>

    <style name="AddLocationEditTextStyleInputDecimal" parent = "AddLocationEditTextStyle">
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

</resources>